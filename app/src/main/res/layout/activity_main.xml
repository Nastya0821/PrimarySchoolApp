<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBgColor"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="65dp"
        android:layout_height="0dp"
        android:background="#E8E3779C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.305">

        <TextView
            android:id="@+id/contacts"
            android:layout_width="100dp"
            android:layout_height="127dp"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:rotation="-90"
            android:text="@string/about_text"
            android:textColor="#DCF8F0F3"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.514"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="333dp" />

        <TextView
            android:id="@+id/contacts2"
            android:layout_width="100dp"
            android:layout_height="127dp"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:rotation="-90"
            android:text="Аккаунт"
            android:textColor="#DCF8F0F3"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="-18dp"
            tools:layout_editor_absoluteY="206dp" />

        <TextView
            android:id="@+id/contacts3"
            android:layout_width="100dp"
            android:layout_height="127dp"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:rotation="-90"
            android:text="Главная"
            android:textColor="#DCF8F0F3"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="-18dp"
            tools:layout_editor_absoluteY="79dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/contacts4"
        android:layout_width="192dp"
        android:layout_height="74dp"
        android:layout_marginStart="65dp"
        android:fontFamily="@font/montserrat_subrayada_bold"
        android:gravity="center"
        android:rotation="0"
        android:text="Главная"
        android:textColor="#E481A3"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="65dp"
        android:layout_height="0dp"
        android:background="#E8E3779C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.305">

        <TextView
            android:id="@+id/contacts"
            android:layout_width="100dp"
            android:layout_height="127dp"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:rotation="-90"
            android:text="@string/about_text"
            android:textColor="#DCF8F0F3"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.514"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="333dp" />

        <TextView
            android:id="@+id/contacts2"
            android:layout_width="100dp"
            android:layout_height="127dp"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:rotation="-90"
            android:text="Аккаунт"
            android:textColor="#DCF8F0F3"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="-18dp"
            tools:layout_editor_absoluteY="206dp" />

        <TextView
            android:id="@+id/contacts3"
            android:layout_width="100dp"
            android:layout_height="127dp"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:rotation="-90"
            android:text="Главная"
            android:textColor="#DCF8F0F3"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="-18dp"
            tools:layout_editor_absoluteY="79dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/constraintLayout"
        app:layout_constraintHorizontal_bias="0.0"
        android:contentDescription="@string/Sales_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/free_icon_agenda_6313563" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/resource__"
        tools:layout_editor_absoluteX="88dp"
        tools:layout_editor_absoluteY="157dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="266dp"
        android:layout_height="166dp"
        android:text="Button"
        android:background="?android:attr/selectableItemBackground"
        android:textColor="#00FFFFFF"
        android:textColorHighlight="#00FFFFFF"
        android:textColorHint="#00FFFFFF"
        app:rippleColor="#00FFFFFF"
        tools:layout_editor_absoluteX="110dp"
        tools:layout_editor_absoluteY="392dp"
        />

    <TextView
        android:id="@+id/contacts5"
        android:layout_width="346dp"
        android:layout_height="77dp"
        android:fontFamily="@font/montserrat_subrayada_bold"
        android:gravity="center"
        android:rotation="0"
        android:shadowColor="#6AE609"
        android:shadowRadius="10"
        android:singleLine="false"
        android:text="Окружающий мир"
        android:textColor="#BA91EE"
        android:textSize="34sp"
        tools:layout_editor_absoluteX="65dp"
        tools:layout_editor_absoluteY="88dp" />

</androidx.constraintlayout.widget.ConstraintLayout>